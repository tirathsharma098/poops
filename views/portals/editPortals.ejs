<% layout('/boilerplate/main.ejs') -%> 

<div class="container my-3">
    <div class="col-6 offset-2">
        <h2 class="text-primary">Edit Public Portal</h2>
    <form action="/portals/details?_method=PUT" class="needs-validation" method="post" novalidate>
        <input type="text" name="portalID" value="<%= portalDoc._id %>" hidden>
        <div class="mb-3">
            <label for="portalName" class="form-label">Name</label>
            
            <select placeholder="Select Portal" type="text" name="portalName" class="form-select" id="portalName" disabled>
                <option value="<%= portalDoc.portalName %>" selected disabled hidden> <%= portalDoc.portalName %> </option>
            </select>
        </div>
        <div class="mb-3">
            <label for="portalAbout" class="form-label">About Portal</label>
            <input placeholder="What about is this portal" type="text" name="portalAbout" id="portalAbout" class="form-control" value="<%= portalDoc.portalAbout %>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="portalImage" class="form-label">Image of Portal</label>
            <input placeholder="Add some Image of portal" type="text" name="portalImage" id="portalImage" class="form-control" value="<%= portalDoc.portalImage %>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="portalPrice" class="form-label">Portal Price</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input placeholder="Did this public portal cost any price" type="number" min="0" max="999" name="portalPrice" id="portalPrice" value="<%= portalDoc.portalPrice %>" class="form-control" required>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <h5>Mention Location</h5>
        <div class="mb-3">
            <label for="country" class="form-label">Portal Country</label>
            <input placeholder="Mention Country" type="text" name="portalAddress[country]" id="country" class="form-control" value="india" disabled required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="state" class="form-label">Portal State</label>
            <select placeholder="State" type="text" name="portalAddress[state]" id="state" class="form-select" disabled required>
                <option value="<%= portalDoc.portalAddress.state %>" selected disabled hidden> <%= portalDoc.portalAddress.state %>  </option>
            </select>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="city" class="form-label">Portal City</label>
            <select placeholder="In Which city this portal is?" type="text" name="portalAddress[city]" id="city" class="form-select" disabled required>
                <option value="<%= portalDoc.portalAddress.city %>" selected disabled hidden> <%= portalDoc.portalAddress.city %> </option>
            </select>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        
        <div class="mb-3">
            <label for="street" class="form-label">Portal Street</label>
            <input placeholder="Add Street Addreess of this portal that you know" type="text" name="portalAddress[street]" id="street" value="<%= portalDoc.portalAddress.street %>" class="form-control" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-success">Update Portal</button>
        </div>
    </form>
    </div>
</div>

<script src="/js/validateForm.js"></script>

    <!-- Prevent form resubmission here -->
    <%- include('../partials/preventResubmit.ejs') %> 